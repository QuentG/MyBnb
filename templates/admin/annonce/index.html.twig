{% extends 'base.html.twig' %}

{% block title %}Administrations des annonces{% endblock %}

{% block body %}

    <div class="container-fluid">
        <h1 class="my-5">Gestion des annonces</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Titre de l'annonce</th>
                    <th>Autheur</th>
                    <th class="text-center">RÃ©servations</th>
                    <th class="text-center">Note/5</th>
                    <tr>Actions</tr>
                </tr>
            </thead>
            <tbody>
            {% for annonce in annonces %}
                <tr>
                    <td>{{ annonce.id }}</td>
                    <td>{{ annonce.title }}</td>
                    <td>
                        <img src="{{ annonce.author.picture }}" alt="Avatar de {{ annonce.author.fullName }}" class="avatar avatar-micro mr-2">{{ annonce.author.fullName }}
                    </td>
                    <td class="text-center">{{ annonce.reservations | length }}</td>
                    <td class="text-center">{{ annonce.averageRatings | number_format(1, ',', ' ') }}</td>
                    <td>
                        <a href="#" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                        <a href="#" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
