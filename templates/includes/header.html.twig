                <a class="nav-link" href="{{ path('annonces') }}">Annonces</a>
            </li>
        </ul>
        <ul class="navbar-nav ml-auto">
            {% if app.user %}
                <li class="nav-item dropdown">
                    <a href="#" id="account_dropdown_link" class="nav-link dropdown-toggle" data-toggle="dropdown">
                        <img src="{{ app.user.picture }}" class="avatar avatar-mini" alt="Avatar de {{ app.user.fullName }}">
